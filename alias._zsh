alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep --color=auto'
alias l='ls -CF'
alias la='ls -A'
alias ll='ls -alF'
alias ls='ls --color=auto'

export cores=$(cat /proc/cpuinfo | grep processor | wc -l)
alias jmake='make -j $cores -l $cores'

alias gpo='git push origin'
alias gpob='git push origin $(current_branch)'
alias grso='git remote show origin'
alias gk='gitk --all -n 500'

alias screen='grabvars; screen'

alias vi='TERM=xterm-sc vim'
alias vim='TERM=xterm-sc vim'
alias vc='$ZSH/tools/vimpager/vimcat'
alias vl='$ZSH/tools/vimpager/vimpager'

