alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep --color=auto'
alias l='ls -CF'
alias la='ls -A'
alias ll='ls -alF'
alias ls='ls --color=auto'

export cores=$(cat /proc/cpuinfo | grep processor | wc -l)
alias jmake='make -j $cores -l $cores'

alias gpo='git push origin'
alias gpob='git push origin $(current_branch)'
alias grso='git remote show origin'
alias grs='git remote show'
alias gk='gitk --all -n 500'
alias ggg='git gui'
alias gf='git fetch'
alias gfo='git fetch origin'
alias glon='git log --oneline --decorate --color | nl | less'
alias glob='git pull origin $(current_branch)'

alias screen='grabvars; screen'

alias tad='tmux attach -dt'

alias vi='TERM=xterm-sc vim'
alias vim='TERM=xterm-sc vim'
alias vc='$ZSH/tools/vimpager/vimcat'
alias vl='$ZSH/tools/vimpager/vimpager'

alias ssh-no-key='ssh -o PubkeyAuthentication=no'

alias myip='curl ipinfo.io/ip'
